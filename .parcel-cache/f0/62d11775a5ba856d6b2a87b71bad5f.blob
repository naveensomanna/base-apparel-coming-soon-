@import url("https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;600&display=swap");
/*------ colors------*/
/* fonts weight */
/* Box sizing rules */
*,
*::before,
*::after {
  box-sizing: border-box;
}
/* Remove default margin */
body,
h1,
h2,
h3,
h4,
p,
figure,
blockquote,
dl,
dd {
  margin: 0;
}
/* Remove list styles on ul, ol elements with a list role, which suggests default styling will be removed */
ul[role=list],
ol[role=list] {
  list-style: none;
}
/* Set core root defaults */
html:focus-within {
  scroll-behavior: smooth;
}
/* Set core body defaults */
body {
  min-height: 100vh;
  text-rendering: optimizeSpeed;
  line-height: 1.5;
}
/* A elements that don't have a class get default styles */
a:not([class]) {
  text-decoration-skip-ink: auto;
}
/* Make images easier to work with */
img,
picture {
  display: block;
}
/* Inherit fonts for inputs and buttons */
input,
button,
textarea,
select {
  font: inherit;
}
/* Remove all animations, transitions and smooth scroll for people that prefer not to see them */
@media (prefers-reduced-motion: reduce) {
  html:focus-within {
    scroll-behavior: auto;
  }

  *,
*::before,
*::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}
body {
  font-family: "Josefin Sans", sans-serif;
  background: url(af12a7142faa8a65fc505fd6ed3f6f33), linear-gradient(135deg, white 0%, #fff5f5 100%);
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.main__wrapper {
  max-width: 1400px;
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: auto;
  padding: 40px 0 100px 0;
}
@media (min-width: 901px) {
  .main__wrapper {
    grid-template-columns: 2fr 1fr;
    grid-template-rows: 200px auto;
  }
}
.main__wrapper .header_wrapper {
  transform: scale(0.7);
  justify-self: flex-start;
  margin: 0 0 30px 0;
}
.main__wrapper .banner__hero {
  align-self: center;
  padding: 0 20px;
  grid-row: span 2;
}
@media (max-width: 1200px) {
  .main__wrapper .banner__hero-image {
    width: 40vw;
  }
}
@media (max-width: 900px) {
  .main__wrapper .banner__hero-image {
    width: 100%;
    margin: 0 0 66px 0;
  }
}
.main__wrapper .content {
  text-align: center;
}
.main__wrapper .content .content__title {
  font-size: 2.5rem;
  font-weight: 300;
  text-transform: uppercase;
  letter-spacing: 0.9rem;
  color: #ce9797;
}
@media (min-width: 480px) {
  .main__wrapper .content .content__title {
    font-size: 3rem;
  }
}
.main__wrapper .content .content__title-coming {
  color: #413a3a;
  font-weight: 400;
}
.main__wrapper .content__description {
  color: #ce9797;
  font-size: 0.98rem;
  max-width: 90%;
  margin: 24px auto;
  line-height: 1.8;
  letter-spacing: 0.01rem;
}
.main__wrapper .content .content__form {
  position: relative;
  width: 80%;
  margin: 0 auto;
}
.main__wrapper .content .content__form .content__input {
  background-color: transparent;
  border-radius: 40px;
  padding-left: 30px;
  height: 50px;
  width: 100%;
  border: 1px solid #d9cacd;
}
.main__wrapper .content .content__form .content__input:focus {
  outline: none;
}
.main__wrapper .content .content__form .content__input::placeholder {
  font-family: "Josefin Sans", sans-serif;
  color: #ce9797;
  font-size: 1rem;
}
.main__wrapper .content .content__form .content__input::before {
  position: absolute;
  content: url("d0fa8f9451cb850270371a1ec0857f42");
}
.main__wrapper .content .content__form .content_btn {
  position: absolute;
  top: 0;
  right: 0;
  border-radius: 40px;
  width: 70px;
  height: 100%;
  background: linear-gradient(135deg, #f8bfbf 0%, #ee8c8c 100%);
  border: none;
  transition: all 250ms ease-in;
  cursor: pointer;
}
.main__wrapper .content .content__form .content_btn:hover {
  width: 80px;
  opacity: 0.8;
}
.footer {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}